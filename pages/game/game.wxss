/* pages/game/game.wxss */
.game-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  background-image: url('/pages/game/assests/images/bg-image.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.game-canvas {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.score-display {
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content:end;
  padding: 0 40rpx;
  z-index: 20;
}

.level#level{
   position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content:end;
  padding: 0 40rpx;
  z-index: 20;
}

.score,
.high-score {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

