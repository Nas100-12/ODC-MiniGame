.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #FFD700;
  margin-bottom: 20rpx;
}

.subtitle,
.game-over-title {
  font-size: 36rpx;
  color: white;
  margin-bottom: 40rpx;
}

.final-score {
  font-size: 48rpx;
  color: #FFD700;
  margin-bottom: 40rpx;
}

.start-btn,
.restart-btn {
  background: #4A90E2;
  color: white;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* On-screen controls for character direction and jump behavior */
.control-panel {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.controls-row {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
}

.control-btn {
  min-width: 140rpx;
  margin: 0 16rpx;
  padding: 16rpx 0;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #fff;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.7);
}
