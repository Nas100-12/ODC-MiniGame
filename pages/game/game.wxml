<!-- pages/game/game.wxml -->
<view class="game-container">

  <!-- GAME CANVAS -->
  <canvas
    id="gameCanvas"
    type="2d"
    class="game-canvas"
    bindtap="handleCanvasTap"
  ></canvas>

  <!-- UI LAYER (OVER CANVAS) -->
  <view class="ui-layer">

    <!-- SCORE -->
    <view class="score-display">
      <text class="score">Score: {{score}}</text>
      <text class="score">High: {{highScore}}</text>
    </view>

    <!-- PAUSE INDICATOR -->
    <view wx:if="{{paused}}" class="pause-overlay">
      <text class="pause-text">PAUSED</text>
      <text class="pause-hint">Tap to Resume</text>
    </view>

  </view>

</view>
