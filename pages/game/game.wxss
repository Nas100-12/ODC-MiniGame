/* pages/game/game.wxss */
.game-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background: #87CEEB; /* Sky blue */
}

.game-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

.score-display {
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  z-index: 10;
}

.score, .high-score {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.start-screen, .game-over {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.7);
  z-index: 100;
}

.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #FFD700;
  margin-bottom: 20rpx;
}

.subtitle, .game-over-title {
  font-size: 36rpx;
  color: white;
  margin-bottom: 40rpx;
}

.final-score {
  font-size: 48rpx;
  color: #FFD700;
  margin-bottom: 40rpx;
}

.start-btn, .restart-btn {
  background: #4A90E2;
  color: white;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}